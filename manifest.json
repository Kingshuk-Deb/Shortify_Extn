{
    "manifest_version": 2,
    "name": "Shortify - URL Shortener",
    "version": "1.0.1",
    "description": "Create a Shortened URL",
    "icons": {
        "128": "logo.png"
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "permissions": ["tabs", "storage"]
}